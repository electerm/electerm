/**
 * default theme file
 */

body
  //tabs
  .tabs
    background #555
  .tab
    background #333
    color #aaa
    &.active
      color #aaa
      background #000
    &:hover
      .tab-close
        display block
    &.dragover-tab::after
      border 1px dashed #777
  .tabs-add-btn
    color #aaa
    &:hover
      color #ccc
  .tabs-extra
    background #555
    .ant-btn
      background #333
      color #aaa
      border-color: #333
      &:hover
        color #ccc
    .tabs-dd-icon
      color #aaa
  .ant-select-dropdown-menu
  .ant-dropdown-menu
    background #555
  .ant-dropdown-menu-item
  .ant-select-dropdown-menu-item
    color #ccc
    &:hover
    &.ant-select-dropdown-menu-item-selected
    &.ant-select-dropdown-menu-item-active
      background #222
      color #eee


  //btns
  .btns
    background #333
    border-color #444
    .ant-select-arrow
    .control-icon
    .open-about-icon
      color #aaa
    .ant-btn
    .ant-select-selection
      background transparent
      color #aaa
      border-color #555

  //sftp
  .sftp-panel
    background #333
    color #bbb
    .ant-input-group-addon
    .ant-input
    .ant-input-group
      color #ccc
      border-color #555
      background #333

  .file-list
    &::-webkit-scrollbar
      width 1em
      background #333

    &::-webkit-scrollbar-track
      -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.6)

    &::-webkit-scrollbar-thumb
      background-color #222
      outline 1px solid #222

  .sftp-item
    &:nth-child(even)
      .sftp-file-prop
        background #383838
    &:hover
      .sftp-file-prop
        background #222
        color #fff
    &.selected
      .sftp-file-prop
        background #111
  .sftp-history
    background #333
    overflow hidden
    border-radius 3px
    &.focused
      height auto
      border 1px solid #555
      box-shadow 0px 0px 3px 3px rgba(0,0,0,0.05)

  .sftp-history-item
    border-bottom 1px solid #555
    &:hover
      background #222

  .sftp-sort-btn
    color #aaa
    &.active
      font-weight bold
      color #555

  .tranports-circle-wrap
    color #eee
  .ant-spin-blur
    opacity inherit
    transform none
  .transports-count
    color #ccc
  .terminal-control
    background #000
  .fileManager
    .terminal-control
      background #333
    .type-tab
      &:hover
      &.active
        color #999
      &.active
        border-bottom 1px solid #999
  .type-tab
    color #777
    &:hover
    &.active
      color #aaa
    &.active
      border-bottom 1px solid #777


  //list table
  .sftp-file-prop
    background #333
    color #fff
    &:last-child
      right 0 !important
      width auto !important
  .sftp-header-item
    border 1px solid #333
    background #222
    color #eee
    &:last-child
      border-right 1px solid #333
      right 0 !important
      width auto !important
    &.desc
      background linear-gradient(to bottom, #000 0%,#444 100%)
    &.asc
      background linear-gradient(to bottom, #444 0%,#000 100%)
  .sftp-header-handle
    border none
    background none

  .sftp-table-content
    &::-webkit-scrollbar
      background rgba(0,0,0,.5)

    &::-webkit-scrollbar-thumb
      background-color rgba(0,0,0,.9)

