@require '../../css/includes/theme-default'
.qm-list-wrap
  max-height calc(100vh - 100px)
  overflow-y scroll
.qm-trigger
  color text-disabled
  background main-dark
.qm-wrap-tooltip
  background main
  position absolute
  left 43px
  right 0
  color text
  z-index 200
  height auto
  bottom 36px
  background alpha(main-dark, .9)
.qm-pinned
  .qm-wrap-tooltip
    height 180px
  .qm-list-wrap
    max-height 100px