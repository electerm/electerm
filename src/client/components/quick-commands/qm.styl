.qm-list-wrap
  max-height calc(100vh - 100px)
  overflow-y scroll
.qm-wrap-tooltip
  background var(--main)
  position absolute
  left 43px
  right 0
  z-index 89
  height auto
  bottom 36px

.qm-pinned
  .qm-wrap-tooltip
    height 180px
  .qm-list-wrap
    max-height 100px

.fil-keyword
.fil-label
  .qm-item
    color var(--text-light)
  .qm-item
    &.name-match
    &.label-match
      font-weight bold
@media (max-width: 500px)
  .qm-search-input
    width 100px

.item-list-unit.dragover
  border: 1px dashed var(--primary)
