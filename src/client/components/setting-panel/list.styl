.item-list-wrap
  overflow-y scroll
  &::-webkit-scrollbar
    width 0
.list-item-remove
  display none
  position absolute
  margin-right 5px
.list-item-edit
  display none
  flex auto
  line-height 31px
  margin-right 5px
.list-item-title
  flex 90%
.item-list-unit
  display flex
  position relative
  margin-bottom 1px
  cursor pointer
  line-height 1.8
  cu
  &.active
    background #08c
    color #fff
  &.current
    font-weight bold
  &:hover
    background #08c
    color #fff
    .list-item-apply
    .list-item-edit
    .list-item-remove
      display block
