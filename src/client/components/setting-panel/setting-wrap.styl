@require '../../css/includes/theme-default'

.setting-wrap
  position fixed
  left 0
  right 0
  top 0
  height 100%
  z-index 888
  overflow hidden
  background main-light
  color text
  animation-duration .5s
.setting-wrap-content
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  overflow-y scroll
.setting-wrap-hide
  width 0
  border-left-width 0
.setting-wrap-inner
  padding-top 55px
.close-setting-wrap
  position absolute
  right 20px
  top 75px
  font-size 24px
  color text-disabled
  cursor pointer
  z-index 889
  &:hover
    color text

.setting-row-left
  position fixed
  left 60px
  top 120px
  width 400px
  bottom 20px
  overflow-y scroll
  padding-right 10px
.setting-row-right
  position fixed
  right 20px
  top 120px
  left 460px
  bottom 20px
  padding 0 10px
  overflow-y scroll