@require '../../css/includes/theme-default'

.setting-wrap
  color text

body .ant-drawer .ant-drawer-content-wrapper
  left 43px
.close-setting-wrap-icon
  position absolute
  top 70px
  font-size 16px
  color text
  cursor pointer
  z-index 889
  &:hover
    color text
.alt-close-setting-wrap
  right 20px
.close-setting-wrap
  top 70px
.setting-row
  position absolute
  top 127px
  overflow-y scroll
.setting-row-left
  left 0
  width 340px
  bottom 0
  padding 20px 0 20px 20px
  .ant-tree
    background none
.setting-row-right
  left 340px
  right 0
  bottom 0
  top 129px
  padding 20px
.setting-tabs-bookmarks
  .setting-row-left
    width 440px
  .setting-row-right
    left 483px
.setting-tabs
  position absolute
  z-index 4
  left 0
  top 0
  right 0
  padding 55px 20px 0 50px
.setting-col
  ::-webkit-scrollbar
    width 0
@media (max-width: 1100px)
  .setting-col
    position fixed
    top 128px
    bottom 0
    left 43px
    right 0
    overflow-y scroll
  .setting-row
    position static
    top auto
  .setting-row-left
    left auto
    width auto
    bottom auto
    padding 138px 10px 10px 10px
  .setting-row-right
    left auto
    right auto
    bottom auto
    top auto
    padding 10px
  .setting-tabs-bookmarks
    .setting-row-left
      width auto
    .setting-row-right
      left auto