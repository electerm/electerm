@require '../../css/includes/theme-default'
.terminal-info-icon
  color text-dark
  &:hover
    color text
.info-panel-wrap
  position absolute
  right 0
  top 100px
  bottom 0
  width 500px
  background main
  border 1px solid darken(main, 30%)
  border-radius 5px 0 0 5px
  border-right none
  color text
  z-index 100
  overflow-y scroll
  opacity .9
  .drag-handle
    left 0
    right auto
    display block
.terminal-info-section
  padding 10px 0
.terminal-info-act
.terminal-info-disk
.terminal-info-network
  max-height 260px
  overflow-y scroll
.activity-item
  .activity-item-copy
    display none
  &:hover .activity-item-copy
    display inline
.info-panel-wrap-pin
  .toggle-info-panel-wrap
    color success