// .terminal-info-icon
.info-panel-wrap
  position fixed
  right 0
  top 100px
  bottom 0
  width 500px
  background #141314
  color #ddd
  box-shadow 0px 3px 3px 3px rgba(90,90,90,0.35)
  z-index 100
  overflow-y scroll
  opacity .9
.terminal-info-section
  padding 10px 0
.terminal-info-act
.terminal-info-disk
.terminal-info-network
  max-height 260px
  overflow-y scroll
.activity-item
  .activity-item-copy
    display none
  &:hover .activity-item-copy
    display inline