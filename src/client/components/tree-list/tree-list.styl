
.tree-control-btn
  display none
  margin-left 3px
  width 16px
  line-height 30px
  height 26px
.tree-item
  display flex
  position relative
  line-height 26px
  padding-left 5px
  border-radius 3px
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
  &.is-category
    .tree-item-title
      font-weight bold
      font-size 14px
  &.selected
  &.item-dragover
  &:hover
    background #000
    color #eee
    cursor pointer
  &:hover
    .tree-control-btn
      display inline-block
      vertical-align middle
      line-height 26px
  &.item-dragover-top
    border-top 1px solid #18d551
.tree-item-title
  flex-grow 1
  line-height 26px
  overflow hidden
  white-space nowrap
  text-overflow ellipsis

.sidebar-panel .tree-item-title
   max-width 100%
.with-plus
  &:after
    content '+'
    position absolute
    font-size 16px
    top 2px
    right 2px
.add-menu-wrap
  .tree-item-title
    padding-right 20px
  .is-category
    .tree-item-title
      padding-right 40px
  .edit-icon.tree-control-btn
  .open-all-icon.tree-control-btn
    position absolute
    right 0
    top 0
  .open-all-icon.tree-control-btn
    right 20px
.group-container
  padding-left 12px
  position relative
  line-height 30px
.tree-expander
  position absolute
  left 0
  top 0
  width 12px
  font-size 11px
  line-height 30px

.category-color-tag
  display inline-block
  width 12px
  height 12px
  margin-right 6px
  border-radius 2px
  border 1px solid #1a1a1a
  vertical-align middle

.move-item-tree-wrap
  max-height 300px
  overflow-y auto
  padding 8px

.tree-list
  display flex
  flex-direction column
  height 100%
  overflow hidden

.tree-list-header
  flex-shrink 0

.item-list-wrap
  flex 1
  overflow-y auto
  min-height 0
