.terms-box
.term-wrap
  background #141314
.loading-wrapper
  background #000
  padding 30px
  z-index 100
  .ant-spin
    color #fff
    background #000
  .ant-spin-blur
    opacity 0
.term-search-box
  position absolute
  right 5px
  top 5px
  z-index 30
.term-sftp-box
  .ant-tabs-bar
    margin-bottom 0
    .ant-tabs-tab
      color #999
    .ant-tabs-tab-active
      color #fff
  .ant-tabs-nav-wrap
    background #333
.terminal-control
  background #141314
  line-height 32px
  padding 0 10px
.fileManager
  .terminal-control
    background #000
  .type-tab
    color #555
    &:hover
    &.active
      color #999
    &.active
      border-bottom 1px solid #999

.terms-box
  position relative
.term-wrap
  position absolute

.vertical
  .term-wrap.not-first-term
    border-top 1px solid #222
.horizontal
  .term-wrap.not-first-term
    border-left 1px solid #222
.term-sftp-tabs
  margin-left 5px
.type-tab
  display inline-block
  vertical-align middle
  line-height 30px
  color #777
  margin-right 20px
  font-size 14px
  cursor pointer
  &:hover
  &.active
    color #aaa
  &.active
    border-bottom 1px solid #777
.spliter
  color #aaa
  font-size 16px
  &:hover
    color #fff
.xterm-viewport
  background-image url(../../../../node_modules/@electerm/electerm-resource/res/imgs/electerm-watermark.png)
  background-repeat no-repeat
  background-position 50% 50%

