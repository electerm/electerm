@require '../../css/includes/theme-default'
.terms-box
  background main
  position relative
.loading-wrapper
  padding 30px
  z-index 100
.term-search-box
  position absolute
  right 5px
  top 5px
  z-index 30

.terminal-control
  background main
  line-height 32px
  padding 0 10px

.terms-box
  position relative
.term-wrap
  background main
  position absolute

.vertical
  .term-wrap.not-first-term
    border-top 1px solid main-light
.horizontal
  .term-wrap.not-first-term
    border-left 1px solid main-light
.term-sftp-tabs
  margin-left 5px

#container
  .xterm-screen::before
    content ''
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-repeat no-repeat
    background-position center
    background-color: transparent !important


.terminal-not-active .xterm-text-layer
  opacity .74

.terminal-normal-buffer
  position absolute
  left 0
  top 0
  width 100%
  background main
  color text
  box-shadow 0px 3px 3px 0px alpha(text, .25)
  z-index 66
  padding-bottom 32px
.terminal-normal-buffer-body
  overflow-y scroll
  max-height 300px
.terminal-normal-buffer-close
  cursor pointer
  font-size 14px
  color text
  &:hover
    color text-light
.terminal-normal-buffer-footer
  position absolute
  left 0
  top calc(100% - 32px)
  width 100%
  height 32px
  line-height 32px
  box-shadow 0px -3px 3px 0px alpha(text, .25)
  background main-light
.batch-input-wrap
  width calc(100% - 80px)
