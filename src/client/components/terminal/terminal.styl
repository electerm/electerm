.loading-wrapper
  background #000
  padding 30px
  z-index 100
  .ant-spin
    color #fff
    background #000
  .ant-spin-blur
    opacity 0
.term-search-box
  position absolute
  right 5px
  top 5px
  z-index 30
.term-sftp-box
  .ant-tabs-bar
    margin-bottom 0
    .ant-tabs-tab
      color #999
    .ant-tabs-tab-active
      color #fff
  .ant-tabs-nav-wrap
    background #333
.terminal-control
  background #000
  line-height 32px
  padding 0 10px
.fileManager
  .terminal-control
    background #fff
  .type-tab
    color #555
    &:hover
    &.active
      color #333
    &.active
      border-bottom 1px solid #555

.terms-box
  position relative
.term-wrap
  position absolute
.mg-fix-2
  margin-top -2px

.vertical
  .term-wrap.not-first-term
    border-top 1px solid #222
.horizontal
  .term-wrap.not-first-term
    border-left 1px solid #222
.type-tab
  display inline-block
  vertical-align middle
  line-height 30px
  color #777
  margin-right 20px
  font-size 14px
  cursor pointer
  &:hover
  &.active
    color #aaa
  &.active
    border-bottom 1px solid #777
