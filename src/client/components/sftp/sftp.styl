@require '../../css/includes/constants'

.sftp-title-wrap
  position relative
.sftp-item
  position relative
  z-index 3
  padding 4px 5px
  user-select none
  border 1px solid #fff
  margin 1px 6px
  border-radius 3px
  &:hover
    background #f2f2f2
  &.selected
    background #ceddcf
.sftp-history
  position absolute
  left 0
  top 100%
  right 0
  z-index 30
  box-shadow none
  border none
  height 0
  background #fff
  overflow hidden
  border-radius 3px
  &.focused
    height auto
    border 1px solid #eee
    box-shadow 0px 0px 3px 3px rgba(0,0,0,0.05)

.sftp-history-item
  padding 5px 10px
  cursor pointer
  border-bottom 1px solid #fefefe
  &:hover
    background #eee

.sftp-item-title
  width 100%
.sftp-item-title
    width 75%
.sftp-item-size
  width 24%
.tranports-circle-wrap
  position absolute
  left 50%
  top 3px
  margin-left -20px
  line-height 36px
  height 36px

.sftp-transport
  &:hover
    background #fafafa

.transports-content
  max-height 300px

.sftp-status-success
  color colorGreen
.sftp-status-exception
  color colorRed
.sftp-status-active
  color colorBlue

.virtual-file
  .sftp-item
    position absolute
    left 0
    right 0
    bottom 0
    top 0
    z-index 1
    opacity 0
    padding 0
    margin 0

.file-icon
  position absolute
  left 10px
  top 10px
  font-size 50px
.file-props
  margin-left 70px

.opacity-loop
  opacity 0.3
  animation blinker 5s linear infinite

@keyframes blinker
  50%
    opacity .8

.sftp-dragover
  border 1px dashed #08c
  border-radius 3px
  color #000
.sftp-sort-btn
  color #aaa
  &.active
    font-weight bold
    color #555
