@require '../../css/includes/constants'
.sftp-wrap
  .ant-spin-container
  .ant-spin-nested-loading
    filter none
.sftp-section
  position absolute
.sftp-title-wrap
  position relative
.sftp-item
  position relative
  z-index 3
  padding 0
  line-height 26px
  height 32px
  user-select none
  margin-bottom 4px
  &:nth-child(even)
    .sftp-file-prop
      background #010101
  &:hover
    .sftp-file-prop
      background-color #222
      color #fff
  &.selected
    .sftp-file-prop
      background-color #194459
      color #eee
.sftp-history
  position absolute
  left 0
  top 100%
  right 0
  z-index 30
  box-shadow none
  border none
  height 0
  background #000
  overflow hidden
  border-radius 3px
  &.focused
    height auto
    border 1px solid #555
    box-shadow 0px 0px 3px 3px rgba(0,0,0,0.05)

.sftp-history-item
  padding 5px 10px
  cursor pointer
  border-bottom 1px solid #555
  &:hover
    background #222

.sftp-item-title
  width 100%
.sftp-item-title
    width 75%
.sftp-item-size
  width 24%
.tranports-circle-wrap
  position absolute
  left 50%
  top 3px
  margin-left -20px
  line-height 36px
  height 36px
  color #eee

.sftp-transport
  &:hover
    background #121212

.transports-content
  max-height 300px
.transports-count
  color #ccc
.sftp-status-success
  color colorGreen
.sftp-status-exception
  color colorRed
.sftp-status-active
  color colorBlue

.virtual-file
  .sftp-item
    position absolute
    left 0
    right 0
    bottom 0
    top 0
    z-index 1
    height 100%
    opacity 0
    padding 0
    margin 0

.file-icon
  position absolute
  left 10px
  top 10px
  font-size 50px
.file-props
  margin-left 70px

.opacity-loop
  opacity 0.3
  animation blinker 5s linear infinite

@keyframes blinker
  50%
    opacity .8

.sftp-sort-btn
  color #aaa
  &.active
    font-weight bold
    color #555

//list table
.sftp-file-prop
  height 32px
  line-height 30px
  position absolute
  left 0
  width 100px
  padding 0 5px
  background #000
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
  pointer-events none
  cursor default
  z-index 4
  color #bbb
  &:last-child
    right 0 !important
    width auto !important
.file-bg
  position absolute
  left 0
  top 0
  right 0
  height 32px
  z-index 3

.sftp-header-item
  height 28px
  line-height 25px
  position absolute
  left 0
  width 100px
  border 1px solid #000
  border-right none
  padding 0 5px
  background #222
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
  color #aaa
  &:last-child
    border-right 1px solid #000
    right 0 !important
    width auto !important
  &.desc
    background linear-gradient(to bottom, #010101 0%,#222 100%)
  &.asc
    background linear-gradient(to bottom, #222 0%,#010101 100%)
.sftp-header-handle
  z-index 20
  cursor ew-resize
  border none
  background none
.sftp-file-table-header
  height 30px
.sftp-table
  z-index 2
.sftp-table-content
  overflow-x hidden
  &::-webkit-scrollbar
    width 5px
    background rgba(0,0,0,.5)

  &::-webkit-scrollbar-track
    -webkit-box-shadow none

  &::-webkit-scrollbar-thumb
    background-color #333
    outline none
.sftp-item
  &.sftp-dragover
    .sftp-file-prop
      background #08c !important
      color #fff !important
  &.sftp-dragover-multi
    &:after
    &:before
      position absolute
      left 2px
      top 2px
      width 100%
      height 100%
      background #033
      content ''
      z-index -1
    &:after
      left 4px
      top 4px
.icon-holder
  width 1em
  display inline-block
.symbolic-link-icon
  margin-right 2px

//sftp
.sftp-panel
  background #000
  color #aaa

.file-list
  &::-webkit-scrollbar
    width 1em
    background #000

  &::-webkit-scrollbar-track
    -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.6)

  &::-webkit-scrollbar-thumb
    background-color #222
    outline 1px solid #222