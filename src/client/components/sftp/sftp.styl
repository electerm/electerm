@require '../../css/includes/constants'

.sftp-title-wrap
  position relative
.sftp-item
  position relative
  z-index 3
  padding 4px 5px
  user-select none
  border 1px solid #fff
  margin 1px 6px
  border-radius 3px
  &:hover
    background #f2f2f2
  &.selected
    background #ceddcf
.sftp-item-title
  width 100%
.sftp-item-title
    width 75%
.sftp-item-size
  width 24%
.tranports-circle-wrap
  position absolute
  left 50%
  margin-left -20px
  top 0
  width 40px
  height 40px
.tranports-control
  position absolute
  top 5px
  left 50%
  width 40px
  height 40px
  border-radius 40px
  margin-left -20px
  z-index 12
  font-size 34px
  line-height 40px
  text-align center
.transport-circle
  position absolute
  top 5px
  left 50%
  margin-left -20px
  z-index 10

.sftp-transport
  &:hover
    background #fafafa

.transports-content
  max-height 300px

.sftp-status-success
  color colorGreen
.sftp-status-exception
  color colorRed
.sftp-status-active
  color colorBlue

.virtual-file
  .sftp-item
    position absolute
    left 0
    right 0
    bottom 0
    top 0
    z-index 1
    opacity 0
    padding 0
    margin 0

.file-icon
  position absolute
  left 10px
  top 10px
  font-size 50px
.file-props
  margin-left 70px

.opacity-loop
  opacity 0.3
  animation: blinker 5s linear infinite

@keyframes blinker
  50%
    opacity .8

.sftp-dragover
  border 1px dashed #08c
  border-radius 3px
  color #000
