@require '../../css/includes/constants'

.sftp-title-wrap
  position relative
.sftp-item
  position relative
  z-index 3
  padding 5px
  &:hover
    background #f2f2f2
    .transport-icon
      display block
.sftp-item-title
  width 100%
.sftp-item-title
    width 75%
.sftp-item-size
  width 24%
.transport-icon
  display none
  cursor pointer
  position absolute
  right 5px
  top 50%
  margin-top -6px
  z-index 12
.transport-circle
  position absolute
  top 5px
  left 50%
  margin-left -20px

.sftp-transport
  &:hover
    background #fafafa

.transports-content
  max-height 300px

.sftp-status-success
  color colorGreen
.sftp-status-exception
  color colorRed
.sftp-status-active
  color colorBlue

.virtual-file
  .sftp-item
    position absolute
    left 0
    right 0
    bottom 0
    top 0
    z-index 1
    opacity 0

.file-icon
  position absolute
  left 10px
  top 10px
  font-size 50px
.file-props
  margin-left 70px