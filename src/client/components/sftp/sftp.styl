@require '../../css/includes/theme-default'

.sftp-wrap
  display flex
  flex-direction row
.sftp-section
  flex 1
.sftp-title-wrap
  position relative
.sftp-item
  position relative
  z-index 3
  padding 0
  line-height 26px
  height 32px
  user-select none
  margin-bottom 4px
  &:nth-child(even)
    .sftp-file-prop
      background main
  &:hover
    .sftp-file-prop
      background-color primary
      color contrastColor(primary)
  &.selected
    .sftp-file-prop
      background-color darken(primary, 30%)
      color contrastColor(primary)
.sftp-history
  position absolute
  left 0
  top 100%
  right 0
  z-index 30
  box-shadow none
  border none
  height 0
  background main
  overflow hidden
  border-radius 3px
  &.focused
    height auto
    border 1px solid main-dark
    box-shadow 0px 0px 3px 3px alpha(main, .05)

.sftp-history-item
  padding 5px 10px
  cursor pointer
  border-bottom 1px solid primary
  &:hover
    background main-dark

.sftp-item-title
  width 100%
.sftp-item-title
    width 75%
.sftp-item-size
  width 24%
.sftp-status-success
  color success
.sftp-status-exception
  color error
.sftp-status-active
  color primary

.virtual-file
  .sftp-item
    position absolute
    left 0
    right 0
    bottom 0
    top 0
    z-index 1
    height 100%
    opacity 0
    padding 0
    margin 0

.file-icon
  position absolute
  left 10px
  top 10px
  font-size 50px
.file-props-div
  display flex
  width 100%
.file-props
  margin-left 70px
.opacity-loop
  opacity 0.3
  animation blinker 5s linear infinite

@keyframes blinker
  50%
    opacity .8

.sftp-sort-btn
  color text
  &.active
    font-weight bold
    color text-light

//list table
.sftp-file-prop
  flex 0 0 auto
  height 32px
  line-height 30px
  padding 0 5px
  background main
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
  pointer-events none
  cursor default
  color text

.file-bg
  position absolute
  left 0
  top 0
  right 0
  height 32px
  z-index 3

.sftp-header-item
  height 28px
  line-height 25px
  padding 0 5px
  background main
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
  color text

.sftp-file-table-header
  height 30px
.sftp-table
  z-index 2
  &:hover
    ::-webkit-scrollbar
      width 12px
.sftp-item
  &.sftp-dragover
    .sftp-file-prop
      background primary !important
      color text-light !important
  &.sftp-dragover-multi
    &:after
    &:before
      position absolute
      left 2px
      top 2px
      width 100%
      height 100%
      background main-light
      content ''
      z-index -1
    &:after
      left 4px
      top 4px
.icon-holder
  width 1em
  display inline-block
.symbolic-link-icon
  margin-right 2px

//sftp
.sftp-panel
  background main
  color text

.file-list
  ::-webkit-scrollbar-thumb
    background-color primary !important

.pager-wrap
  z-index 4
  position relative
.file-header-context-menu
  position fixed
  z-index 999

.keyword-filter-icon
  &:hover
  &.active
    color success
