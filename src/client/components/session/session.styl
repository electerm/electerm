@require '../../css/includes/theme-default'
@keyframes rotate
  from
    background-position -3000px
  to
    background-position 0px
.type-tab-line
  position absolute
  bottom 0
  left 0
  width 100%
  height 1px
  background text-dark
  display none

.type-tab
  position relative
  display inline-block
  vertical-align middle
  line-height 30px
  color text-dark
  margin-right 20px
  font-size 14px
  cursor pointer
  &:hover
  &.active
    color text
  &.active
    .type-tab-line
      display inline-block
.is-transporting
  .type-tab.sftp
    .type-tab-line
      display inline-block
      background linear-gradient(to right, success 0%, main 25%, error 50%, primary 75%, success 100%)
      animation: rotate 60s infinite linear

.spliter
  color text
  font-size 16px
  &:hover
    color text-light

