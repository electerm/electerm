@require '../../css/includes/theme-default'
.common-err-desc
  &:hover
    text-overflow clip
    overflow-x hidden
    white-space pre
    max-height 300px
    overflow scroll
// .pinned .sessions
//   margin-left 343px
.error-wrapper
  background main
  height 100%
  position fixed
  color text
  overflow-y scroll
.init-wrap
.loading-data
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  background-color main-light
.loading-data
  text-align center
  font-size 30px
  color text
  padding 50px
  z-index 210
  .ant-tag
    border-radius 3px
    padding 4px
    font-size 14px
.loaded
  .loading-data
    display none

#container
  .session-batch-active
    .xterm-screen
      &::before
        font-size 30vmin
        font-weight bold
        color lighten(text, 15%)
        display flex
        justify-content center
        align-items center
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        z-index -1