.upgrade-panel
  position fixed
  right 10px
  bottom 10px
  z-index 9999
  background var(--main)
  border-radius 5px
  border 1px solid var(--main-darker)
  padding 0
  width 440px
.upgrade-panel-hide
  left -600px
  top 400px
  right auto
  bottom auto
.close-upgrade-panel
  &:hover
    color var(--success)
.upgrade-panel-title
.upgrade-panel-body
  padding 10px 15px
.upgrade-panel-title
  border-bottom 1px solid var(--main-darker)
.markdown-wrap
  max-height 40vh
  overflow-y auto