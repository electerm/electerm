@require '../../css/includes/theme-default'
.upgrade-panel
  position fixed
  right 10px
  bottom 10px
  z-index 9999
  background main
  color text
  box-shadow 0px 0px 5px 5px alpha(main, .25)
  padding 0
  width 340px
.upgrade-panel-hide
  left -400px
  top 400px
  right auto
  bottom auto
.close-upgrade-panel
  position absolute
  right 5px
  top 8px
  &:hover
    color success
.upgrade-panel-title
.upgrade-panel-body
  padding 10px 15px
.upgrade-panel-title
  border-bottom 1px solid main-dark