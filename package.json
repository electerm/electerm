{
  "name": "electerm",
  "version": "0.27.52",
  "description": "Terminal/ssh/sftp client(linux, mac, win) based on electron/ssh2/node-pty/xterm/antd/subx and other libs",
  "main": "dev-app.js",
  "bin": "npm/electerm",
  "scripts": {
    "app": "node bin/app",
    "build": "./node_modules/.bin/cross-env NODE_ENV=production ./node_modules/.bin/webpack --progress",
    "start": "./node_modules/.bin/webpack-dev-server --progress --colors --content-base app/assets/",
    "icon": "node bin/icon",
    "ver": "node bin/generate-version",
    "clean": "node bin/clean",
    "compile": "node bin/build",
    "prepublishOnly": "node npm/prepublish",
    "postpublish": "node npm/postpublish",
    "prepare-file": "node bin/prepare",
    "output": "./node_modules/.bin/electron-builder",
    "build-linux": "node bin/build-linux",
    "release": "npm run pre-test && npm run output",
    "preinstall": "node bin/preinstall",
    "postinstall": "node bin/post-install",
    "lint": "./node_modules/.bin/standard --verbose | snazzy",
    "test": "./node_modules/.bin/mocha test/e2e/*.js",
    "pre-test": "npm run compile && npm run prepare-file"
  },
  "license": "MIT",
  "langugeRepo": "https://github.com/electerm/electerm-locales",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/electerm/electerm.git"
  },
  "author": {
    "name": "ZHAO Xudong",
    "email": "zxdong@gmail.com",
    "url": "https://html5beta.com"
  },
  "bugs": {
    "url": "https://github.com/electerm/electerm/issues"
  },
  "homepage": "https://electerm.html5beta.com",
  "engines": {
    "node": ">=12.0.0"
  },
  "preferGlobal": true,
  "devDependencies": {
    "@babel/cli": "*",
    "@babel/core": "*",
    "@babel/plugin-proposal-class-properties": "*",
    "@babel/plugin-proposal-decorators": "*",
    "@babel/plugin-syntax-dynamic-import": "*",
    "@babel/plugin-transform-runtime": "*",
    "@babel/preset-env": "*",
    "@babel/preset-react": "*",
    "@babel/register": "*",
    "@babel/runtime": "*",
    "@electerm/antd-dark-theme": "*",
    "@electerm/electerm-resource": "*",
    "antd": "*",
    "babel-eslint": "*",
    "babel-loader": "*",
    "babel-minify-webpack-plugin": "*",
    "babel-plugin-import": "*",
    "babel-plugin-syntax-dynamic-import": "*",
    "babel-plugin-transform-runtime": "*",
    "babel-preset-minify": "*",
    "badges": "*",
    "chai": "*",
    "classnames": "*",
    "concat-loader": "*",
    "cross-env": "*",
    "css-loader": "*",
    "dotenv": "*",
    "electron": "*",
    "electron-builder": "*",
    "electron-rebuild": "*",
    "extract-loader": "*",
    "file-loader": "*",
    "git-rev-sync": "*",
    "happypack": "*",
    "html-loader": "*",
    "less": "*",
    "less-loader": "*",
    "memoize-one": "*",
    "mini-css-extract-plugin": "*",
    "mocha": "*",
    "optimize-css-assets-webpack-plugin": "*",
    "png2icons": "*",
    "prop-types": "*",
    "pug-html-loader": "*",
    "shelljs": "*",
    "snazzy": "*",
    "spectron": "*",
    "standard": "*",
    "style-loader": "*",
    "stylus": "*",
    "stylus-loader": "*",
    "subx": "*",
    "url-loader": "*",
    "useragent": "*",
    "webpack": "*",
    "webpack-cli": "*",
    "webpack-dev-server": "*",
    "xterm": "*"
  },
  "dependencies": {
    "@electerm/electerm-locales": "*",
    "@electerm/ssh2": "*",
    "bluebird": "*",
    "body-parser": "*",
    "cors": "*",
    "electron-log": "*",
    "express": "*",
    "express-ws": "*",
    "find-free-port": "*",
    "json-deep-copy": "*",
    "lodash": "*",
    "nedb": "*",
    "node-pty": "0.9.0-beta19",
    "os-locale": "*",
    "phin": "*",
    "react": "*",
    "react-dom": "*",
    "recursive-assign": "*",
    "shortid": "*",
    "socks": "*",
    "ssh-config": "*",
    "zmodem.js": "*"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "/app/assets/",
      "/app/"
    ],
    "globals": [
      "describe",
      "beforeEach",
      "afterEach",
      "it",
      "log",
      "MouseEvent",
      "WebSocket",
      "FileReader",
      "CustomEvent"
    ]
  }
}
